---
import { Image } from "astro:assets";
import banner from "../assets/banner.jpg";
import logo from "../assets/logo.png";
import Badges from "./Badges.astro";
---

<header class="header">
    <Image
        alt="Barbell on the floor"
        class="banner-image"
        height={800}
        loading="eager"
        src={banner}
        width={1920}
    />
    <div class="container header-text">
        <div class="row">
            <Image
                alt="Log4Fit"
                class="logo"
                height={128}
                src={logo}
                width={128}
            />
            <p class="brand-name">Log4Fit</p>
        </div>
        <div class="row mt-8">
            <Badges />
        </div>
    </div>
</header>

<style>
    .header {
        position: relative;
        height: 680px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .header-text {
        margin-top: 20%;
        margin-bottom: 10%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .brand-name {
        font-size: 4rem;
        font-weight: 600;
        color: white;
        text-shadow: var(--shadow);
    }
    .banner-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        z-index: -1;
    }
    .logo {
        margin-right: 1.21rem;
        border-radius: 0.5rem;
        overflow: hidden;
        max-width: 4rem;
        max-height: 4rem;
        box-shadow: var(--shadow);
    }
</style>
